#!/bin/bash
#
# flapper
#

# Source function library.
. /etc/rc.d/init.d/functions

PATH=/opt/flapjack/bin:$PATH
DAEMON=/opt/flapjack/bin/flapjack
DAEMON_ARGS=flapper
NAME=flapper
DESC=flapper

RUNDIR=/var/run/flapjack
PIDFILE=$RUNDIR/$NAME.pid

start() {
    [ -x $DAEMON ] || exit 5
    echo -n "Starting $NAME: "
    runuser -s "/bin/bash" -c "$DAEMON $DAEMON_ARGS" flapjack &
    pid=$!
    if [ -n "$pid" ]; then
        echo $pid >"$PIDFILE"
        echo "ok."
    else
        echo "failed."
    fi
}

stop() {
    echo -n $"Stopping $NAME: "
    if [ -n "\`pgrep $NAME\`" ] ; then
        killproc $NAME
    else
        failure $"Stopping $DAEMON"
    fi
    retval=$?
    echo
    [ $retval -eq 0 ] && rm -f $PIDFILE
}

restart() {
    stop
    start
}

reload() {
    restart
}

force_reload() {
    restart
}

rh_status() {
    # run checks to determine if the service is running
    status -p $PIDFILE
}

rh_status_q() {
    rh_status >/dev/null 2>&1
}


case "$1" in
    start)
        rh_status_q && exit 0
        $1
        ;;
    stop)
        rh_status_q || exit 0
        $1
        ;;
    restart)
        $1
        ;;
    reload)
        rh_status_q || exit 7
        $1
        ;;
    force-reload)
        force_reload
        ;;
    status)
        rh_status
        ;;
    condrestart|try-restart)
        rh_status_q || exit 0
        restart
        ;;
    *)
        echo $"Usage: $0 {start|stop|status|restart|condrestart|try-restart|reload|force-reload}"
        exit 2
esac
exit $?
